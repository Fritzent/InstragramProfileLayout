<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fillViewport="false"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >

        <ImageView
            android:id="@+id/storySatu"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/user_story"
            android:layout_marginEnd="30dp"
            />
        <ImageView
            android:id="@+id/storyDua"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/user_story"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/storyTiga"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/user_story"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/storyEmpat"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/user_story"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/storyLima"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/user_story"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/storyEnam"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/user_story"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/storyTujuh"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/user_story"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/storyDelapan"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/user_story"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/storySembilan"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/user_story"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/storySepuluh"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/user_story"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>

</HorizontalScrollView>